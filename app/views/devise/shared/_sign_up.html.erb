<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.text_field :username, prepend: '@', autofocus: true, hide_label: true, placeholder: 'Username' %>
  <%= f.email_field :email, hide_label: true, placeholder: 'Email' %>
  <%= f.password_field :password, autocomplete: 'off', hide_label: true, placeholder: 'Password' %>
  <%= f.password_field :password_confirmation, autocomplete: 'off', hide_label: true, placeholder: 'Password Confirmation' %>
  <%= f.submit "Sign Up", class: 'btn btn-primary' %>
<% end %>
