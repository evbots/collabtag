<!-- Header -->
<a name="about"></a>
<div class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-12 col-xs-12">
        <div class="intro-message">
          <span class="brand-rule landing-brand"><span class="brand-collab">collab</span><span class="brand-tag">tag</span></span>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="content-section-b">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <h3 class="text-center">Explore topics at your school</h3>
        <%= render 'shared/school_search' %>
      </div>
    </div>
  </div>
</div>
<div class="content-section-a">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-1">
        <h2 class="section-heading text-center">About</h2>
        <h2 class="section-heading brand-title-message">Collabtag is a <span class="brand-bold">social collaboration</span> service for university students.</h2>
        <h3 class="brand-submessage">We're on a mission to make communicating across campus easier and more fun than ever before.</h3>
      </div>
      <div class="col-sm-4">
        <h2 class="section-heading text-center">Sign Up</h2>
        <%= render 'devise/shared/sign_up' %>
        <hr>
        <%= link_to(user_omniauth_authorize_path(:facebook), class: 'btn btn-primary social-login') do %> 
          <i class="fa fa-facebook"></i> | Sign in with Facebook
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Footer -->
